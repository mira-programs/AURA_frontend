<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EBE3"
    tools:context=".AccountActivity">

    <!-- Header -->

    <!-- Username -->

    <!-- Profile Icons Row -->

    <!-- Settings List -->

    <!-- Log Out Button -->

    <!-- Bottom Navigation -->

    <LinearLayout
        android:id="@+id/top_card_layout"
        android:layout_width="414dp"
        android:layout_height="124dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corners_topcard"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/profile_icons_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_icons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="132dp">

        <!-- Profile Icon -->
        <ImageButton
            android:id="@+id/profile_icon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nothing"
            android:contentDescription="Profile Icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_account" />

        <!-- Aura Points Icon -->
        <ImageButton
            android:id="@+id/aura_points_icon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nothing"
            android:contentDescription="Aura Points Icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_aurapoints_account" />

        <!-- Challenges Achieved Icon -->
        <ImageButton
            android:id="@+id/challenges_achieved_icon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/nothing"
            android:contentDescription="Challenges Achieved Icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_challengesachieved_account" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row">

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/privacy_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Privacy"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/language_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Get Help"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/terms_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Terms and Conditions"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/about_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="About AURA"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/signUpButtonColor"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF0040"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Friends Button -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Friends"
            android:scaleType="fitCenter" />

        <!-- Center Target -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Target"
            android:scaleType="fitCenter" />

        <!-- Account Button -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Account"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/auraPointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="Aura points"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/challengesAchievedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="Challenges Achieved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
