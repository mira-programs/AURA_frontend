<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EBE3"
    tools:context=".AccountActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/account_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="24sp"
        android:textColor="#FF0040"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/account_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARIA EID"
        android:textSize="18sp"
        android:textColor="#FF0040"
        app:layout_constraintTop_toBottomOf="@id/account_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Profile Icons Row -->
    <LinearLayout
        android:id="@+id/profile_icons_row"
        android:layout_width="331dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_username"
        tools:ignore="ExtraText">

        <!-- Profile Icon -->
        <ImageButton
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_account" />
        <!-- xml file made in drawable -->

        <!-- Aura Points Icon -->

        <!-- Challenges Achieved Icon -->
        <ImageButton
            android:layout_width="78dp"
            android:layout_height="117dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_aurapoints_account" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_challengesachieved_account" />

    </LinearLayout>

    <!-- Settings List -->

    <!-- Log Out Button -->

    <!-- Bottom Navigation -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Privacy"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Get Help"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Terms and Conditions"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="About AURA"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="Log out"
        android:textColor="#FF0040"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF0040"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Friends Button -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Friends"
            android:src="@drawable/ic_friends"
            android:scaleType="fitCenter" />

        <!-- Center Target -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_target"
            android:contentDescription="Target"
            android:scaleType="fitCenter" />

        <!-- Account Button -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Account"
            android:src="@drawable/ic_account"
