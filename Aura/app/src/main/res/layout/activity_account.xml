<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EBE3"
    tools:context=".AccountActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/account_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="24sp"
        android:textColor="#FF0040"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/account_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARIA EID"
        android:textSize="18sp"
        android:textColor="#FF0040"
        app:layout_constraintTop_toBottomOf="@id/account_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Profile Icons Row -->
    <LinearLayout
        android:id="@+id/profile_icons_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/account_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Profile Icon -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile_account"
            android:layout_marginEnd="16dp" />

        <!-- Aura Points Icon -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_aurapoints_account"
            android:layout_marginEnd="16dp" />

        <!-- Challenges Achieved Icon -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_challengesachieved_account"
            android:layout_marginEnd="16dp" />

        <!-- Saved Icon -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_saved_account" />
    </LinearLayout>

    <!-- Settings List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_settings"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_currency"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Currency"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_language"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_get_help"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Get Help"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_terms_conditions"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Terms and Conditions"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_refer_friend"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Refer to a Friend"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_faq"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="FAQs"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@drawable/ic_about_aura"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="About AURA"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Log Out Button -->

    <!-- Bottom Navigation -->


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="444dp"
        android:background="@drawable/border_gray"
        android:gravity="center"
        android:text="Log out"
        android:textColor="#FF0040"
        app:layout_constraintTop_toBottomOf="@id/profile_icons_row"
        tools:layout_editor_absoluteX="25dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF0040"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <!-- NAVIGATION -->

        <!-- Friends -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Friends"
            android:src="@drawable/ic_friends" />

        <!-- Target -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Target"
            android:src="@drawable/ic_target" />

        <!-- Account -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Account"
            android:src="@drawable/ic_account" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
