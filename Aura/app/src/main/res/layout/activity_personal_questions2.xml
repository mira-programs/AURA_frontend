<!-- activity_personal_questions_2.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your occupation?"
        android:textSize="18sp"
        android:layout_marginTop="24dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_at_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At school"/>

        <RadioButton
            android:id="@+id/radio_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"/>

        <RadioButton
            android:id="@+id/radio_working"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working"/>

        <RadioButton
            android:id="@+id/radio_unemployed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unemployed"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="24dp"/>

</LinearLayout>
